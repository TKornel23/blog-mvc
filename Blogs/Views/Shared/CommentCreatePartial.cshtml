@model Blog.Persistence.Comment

@using (Html.BeginForm("CreateAsync", "Comment", FormMethod.Post))
{
    <div class="w-100">
        <div class="form-group mb-2 w-50">
            <h6>
                @Model.Owner.Email
            </h6>
        </div>
        <div class="form-group mb-2 w-50">
            <input class="w-100" type="text" placeholder="CommentSection" required name="CommentSection">
            @Html.ValidationMessageFor(x => x.CommentSection)
            @Html.HiddenFor(m => m.Owner)
            @Html.HiddenFor(m => m.OwnerId)
            @Html.HiddenFor(m => m.Blog)
            @Html.HiddenFor(m => m.BlogId)
        </div>
        <div class="form-group">
            <input type="submit" value="Post comment" class="btn btn-primary">
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
