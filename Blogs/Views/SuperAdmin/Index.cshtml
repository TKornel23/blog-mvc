@model Blogs.SuperAdminViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-5">Admin Dashboard</h1>

@if (Model.Blogs.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Number of Comments</th>
                <th>Number of Tags</th>
                <th>Number of Likes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Blogs)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Comments.Count()
                    </td>
                    <td>
                        @item.Tags.Count()
                    </td>
                    <td>
                        @item.Likes
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteBlog", "Blog", new { blogId = item.Id } )
                        @Html.ActionLink("Update", "UpdateBlog", "Blog", new { blogId = item.Id } )
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@if (Model.Comments.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Comments)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Created
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Comment", "DeleteComment", new { commentId = item.Id } )
                        @Html.ActionLink("Update", "Comment", "GetOne", new { commentId = item.Id } )
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.Tags.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tags)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Created
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Tag", "DeleteTag", new { tagtId = item.Id } )
                        @Html.ActionLink("Update", "Tag", "GetOne", new { tagtId = item.Id } )
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.Users.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                         @item.UserName
                    </td>
                </tr>
            }
        </tbody>
    </table>
}